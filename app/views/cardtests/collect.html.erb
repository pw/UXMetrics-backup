<div class="dashboard-wrapper">
  <div class="mt-16 max-w-xl mx-auto">
    <header class="flex justify-between">
      <h1 class="text-3xl mb-4">This is collect</h1>

      <div>
        
      </div>
    </header>

      <div class="flex">
        <h2 class="w-full sm:w-1/4">Name:</h2>
        <p class="w-full sm:w-3/4"><%= @cardtest.name %></p>
      </div>
      <div class="flex">
        <h2 class="w-full sm:w-1/4">Items:</h2>

        <ul id='cards'>
          <% @cardtest.cards.sort_by(&:order).each do |card| %>
            <li class="max-w-sm rounded overflow-hidden shadow-lg p-5"><%= card.name %></li>
          <% end %>
        </ul>







      </div>

  </div>
</div>
