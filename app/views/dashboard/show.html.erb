<div class="py-6 border-b">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="md:flex md:items-center md:justify-between">
      <div class="flex-1 min-w-0">
        <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:leading-9 sm:truncate">
          Dashboard
        </h1>
      </div>
    </div>
  </div>
</div>
<main class="py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="mb-6 text-gray-500 text-xs font-medium uppercase tracking-wide">Research Studies</h2>
    <div class="mt-3 grid grid-cols-1 gap-5 sm:gap-6 lg:grid-cols-3">
      <%= link_to card_sorts_path, {class: "focus:outline-none"} do %>
        <div class="col-span-1 flex-grow rounded-md bg-white shadow">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-purple-600">
              Card Sorts
            </h3>
            <div class="mt-2 max-w-xl text-xs leading-5 text-gray-500">
              <div class="inline">
                Published
                <span class="inline-flex items-center px-3 py-0.5 rounded-full font-medium leading-5 bg-green-100 text-green-800">
                  <%= @card_sorts['published'] || 0 %>
                </span>
              </div>
              <div class="inline ml-2">
                Drafts
                <span class="inline-flex items-center px-3 py-0.5 rounded-full font-medium leading-5 bg-orange-100 text-orange-800">
                  <%= @card_sorts['draft'] || 0 %>
                </span>
              </div>
              <div class="inline ml-2">
                Ended
                <span class="inline-flex items-center px-3 py-0.5 rounded-full font-medium leading-5 bg-gray-100 text-gray-800">
                  <%= @card_sorts['ended'] || 0 %>
                </span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <%= link_to tree_tests_path, {class: "focus:outline-none"} do %>
        <div class="col-span-1 flex-grow rounded-md bg-white shadow">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-purple-600">
              Tree Tests
            </h3>
            <div class="mt-2 max-w-xl text-xs leading-5 text-gray-500">
              <div class="inline">
                Published
                <span class="inline-flex items-center px-3 py-0.5 rounded-full font-medium leading-5 bg-green-100 text-green-800">
                  <%= @tree_tests['published'] || 0 %>
                </span>
              </div>
              <div class="inline ml-2">
                Drafts
                <span class="inline-flex items-center px-3 py-0.5 rounded-full font-medium leading-5 bg-orange-100 text-orange-800">
                  <%= @tree_tests['draft'] || 0 %>
                </span>
              </div>
              <div class="inline ml-2">
                Ended
                <span class="inline-flex items-center px-3 py-0.5 rounded-full font-medium leading-5 bg-gray-100 text-gray-800">
                  <%= @tree_tests['ended'] || 0 %>
                </span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <div class="col-span-1 flex-grow rounded-md bg-white shadow">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-500">
            More UX Tools on the way!
          </h3>
          <div class="mt-2 max-w-xl text-xs leading-5 text-gray-500">
            <a href="#" class="font-medium text-purple-600 hover:text-purple-500 transition ease-in-out duration-150">
              Tell us what should we ship next &rarr;
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>