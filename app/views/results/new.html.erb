                        <%= content_tag :div, class:"nested-field" do %>

                          <div class="field">
                            <p><%= card.name %></p>
                            <p class="order"><%= card.order %></p>
                          </div>





                    <% end %>
                    </div>

            <% end %>
          </div>
        </div>
