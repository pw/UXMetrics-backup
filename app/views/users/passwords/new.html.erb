  <div class="mt-4 max-w-lg mx-auto">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "card card--light p-4" }) do |f| %>
    <%= devise_error_messages! %>

    <h1 class="mt-2 mb-6 text-xl">Forgot your password?</h1>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autocomplete: "email", class: "input" %>
    </div>

    <div class="buttons">
      <%= f.submit "Resend password", class: "btn btn--primary" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>

