<div class="mt-4 max-w-lg mx-auto">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put,  class: "card card--light p-4" }) do |f| %>
    <%= devise_error_messages! %>

    <h1 class="mt-2 mb-6 text-xl">Edit account</h1>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autocomplete: "email", class: "input", placeholder: "Your email" %>
    </div>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, class: "input", placeholder: "Your full name" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <i class="field__helper">(leave blank if you do not want to change it)</i>
      <%= f.password_field :password, autocomplete: "new-password", class: "input", placeholder: "•••••••••••••" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i class="field__helper">(we need your current password to confirm your changes)</i>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "input", placeholder: "•••••••••••••" %>
    </div>

    <div class="buttons">
      <%= f.submit "Update", class: "btn btn--primary" %>
    </div>
  <% end %>
</div>

